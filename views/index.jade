extends layout

block content
  nav.navbar.navbar-default( role="navigation" )
    .navbar-header
      button.navbar-toggle.collapsed( type="button", data-toggle="collapse", data-target="#navbar-inverse", aria-expanded="false", aria-controls="navbar")
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href="#") #{title}

  a(href='https://github.com/drouarb/nodejs-mongodb-demo')
    img(style='position: absolute; top: 0; right: 0; border: 0;', src='https://camo.githubusercontent.com/365986a132ccd6a44c23a9169022c0b5c890c387/68747470733a2f2f73332e616d617a6f6e6177732e636f6d2f6769746875622f726962626f6e732f666f726b6d655f72696768745f7265645f6161303030302e706e67', alt='Fork me on GitHub', data-canonical-src='https://s3.amazonaws.com/github/ribbons/forkme_right_red_aa0000.png')

  form.form-inline(align="center" id="createForm" method="get" action="/create")
    div.form-group
      input.form-control(type="text" name="value" id="value" placeholder="Value" maxlength=32)
      button.btn.btn-success(type="submit" id="create") Submit

  br

  div(align="center")
    ul.list-group(id="list" style="width:400px")
      li.list-group-item.active Values
      each val, uuid in values
        li.list-group-item(id=uuid)
          div(align="right" style="float:right")
            button.btn.btn-danger.btn-xs(id="btn-" + uuid onClick="deleteItem(this.id)") Delete
          div(align="left")= val

  div.modal.fade.modal-error(tabindex="-1" role="dialog" aria-labelledby="errorModal" id="errorModal")
    div.modal-dialog
      div.modal-content
        div.modal-header
          button.close(type="button" data-dismiss="modal" aria-label="Close")
            span(aria-hidden="true") &times;
          h4.modal-title(id="errorModal") Error
        div.modal-body(id="errorField")
        div.modal-footer
          button.btn.btn-danger.btn-sm(type="button" data-dismiss="modal") Close