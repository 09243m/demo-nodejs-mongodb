extends layout

block content
  nav.navbar.navbar-default( role="navigation" )
    .navbar-header
      button.navbar-toggle.collapsed( type="button", data-toggle="collapse", data-target="#navbar-inverse", aria-expanded="false", aria-controls="navbar")
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href="#") #{title}

  form.form-inline(align="center" id="createForm" method="get" action="/create")
    div.form-group
      input.form-control(type="text" name="value" id="value" placeholder="Value" maxlength=32)
      button.btn.btn-success(type="submit" id="create") Submit

  br

  div(align="center")
    ul.list-group(id="list" style="width:400px")
      li.list-group-item.active Values
      each val, uuid in values
        li.list-group-item(id=uuid)
          div(align="right" style="float:right")
            button.btn.btn-danger.btn-xs(id="btn-" + uuid onClick="deleteItem(this.id)") Delete
          div(align="left")= val